{
    "package_version": 2,
    "version": "1.1.1",
    "name": "textmeshpro-tool",
    "description": "i18n:textmeshpro-tool.description",
    "main": "./dist/main.js",
    "dependencies": {
        "vue": "^3.1.4",
        "fs-extra": "^10.0.0"
    },
    "devDependencies": {
        "@types/node": "^16.0.1",
        "@types/fs-extra": "^9.0.5",
        "typescript": "^4.3.4"
    },
    "panels": {
        "default": {
            "title": "textmeshpro-tool",
            "type": "dockable",
            "main": "dist/panels/default",
            "size": {
                "min-width": 400,
                "min-height": 300,
                "width": 600,
                "height": 500
            }
        }
    },
    "contributions": {
        "menu": [
            {
                "path": "i18n:menu.extension/TextMeshPro",
                "label": "Font Tool",
                "message": "open-panel"
            },
            {
                "path": "i18n:menu.extension/TextMeshPro",
                "label": "Import Assets",
                "message": "import-example"
            }
        ],
        "messages": {
            "open-panel": {
                "methods": [
                    "openPanel"
                ]
            },
            "import-example": {
                "methods": [
                    "importExample"
                ]
            },
            "panel-init": {
                "methods": [
                    "onPanelInit"
                ]
            },
            "change-config": {
                "methods": [
                    "onChangeConfig"
                ]
            },
            "click-btn-save": {
                "methods": [
                    "onClickBtnSave"
                ]
            },
            "click-btn-export": {
                "methods": [
                    "onClickBtnExport"
                ]
            },
            "refresh-config": {
                "methods": [
                    "default.refreshConfig"
                ]
            }
        }
    },
    "author": "YipLee",
    "editor": ">=3.6.0",
    "scripts": {
        "build": "tsc -b",
        "watch": "tsc -w"
    }
}